{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "brand-shell": ["../../src/index.ts"],
      "brand-shell/web": ["../../src/web/index.ts"],
      "brand-shell/vue": ["../../src/vue/index.ts"],
      "brand-shell/svelte": ["../../src/svelte/index.ts"],
      "brand-shell/schema": ["../../schemas/brand-shell.schema.json"],
      "brand-shell/schema.json": ["../../schemas/brand-shell.schema.json"],
      "brand-shell/default.css": ["../../styles/default.css"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
