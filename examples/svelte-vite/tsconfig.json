{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "types": ["svelte"]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "vite.config.js",
    "svelte.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
